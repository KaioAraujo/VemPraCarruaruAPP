<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.vempracaruaru.Activitys.PerfilObraActivity">

    //para ver o resultado rode a app
    //para ver como esta o estilo entre em style na pasta res/values
    //o mesmo para o texto do button em string

    <ImageView
        android:id="@+id/imv_imagem_obra"
        style="@style/imagem"
        />

    <TextView
        android:id="@+id/txv_titulo_obra"
        style="@style/titulo"
        android:layout_toRightOf="@id/imv_imagem_obra"
        />

    <TextView
        android:id="@+id/txv_sub_titulo_obra"
        style="@style/sub_titulo"
        android:layout_below="@id/imv_imagem_obra"
        />

    <Button
        android:id="@+id/btn_ver_fotos"
        android:text="@string/ver_fotos"
        style="@style/button"
        android:layout_below="@id/txv_sub_titulo_obra"
        />

    <TextView
        android:id="@+id/txv_texto"
        style="@style/texto"
        android:layout_below="@id/btn_ver_fotos"
        />

</RelativeLayout>
