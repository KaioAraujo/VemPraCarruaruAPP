<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.vempracaruaru.activitys.MinhaContaActivity">

    <FrameLayout
        android:id="@+id/idshadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_margin="0.1dp"
            >

            <TextView
                android:id="@+id/txv_info_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_margin="8dp"
                android:text="AQUI VEM O NOME DO CARA"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txv_info_pontuacao"
                android:layout_below="@id/txv_info_nome"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_margin="8dp"
                android:text="PONTUAÃ‡AO"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Alterar Senha"
                android:id="@+id/btn_alterar_senha"
                style="@style/button"
                android:textSize="11sp"
                android:layout_below="@+id/txv_info_nome"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                />
        </RelativeLayout>
    </FrameLayout>



    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Listapontosturisticosjv"
        android:id="@+id/txv_lista_pontos_turisticos_a_visitar"
        android:textColor="#0600ff"
        android:textStyle="bold"
        android:layout_below="@id/idshadow"
        android:layout_centerHorizontal="true"
        />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup"
            >

        </RadioGroup>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" />

</RelativeLayout>
